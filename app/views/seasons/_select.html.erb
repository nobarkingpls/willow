
<% if @searched_seasons.present? %>

            <table>
            <thead>
                <tr>
                <th>ID</th>
                <th>Show</th>
                <th>Season</th>
                <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @searched_seasons.each do |season| %>
                <tr>
                        <td><%= season.id %></td>
                        <td><%= season.show.title %></td>
                        <td><%= season.number %></td>

                        <td><%= link_to "Show", season %></td>
                        <td><%= link_to "Edit", edit_season_path(season) %></td>
                        <td><%= link_to "Destroy", season, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
                </tr>
                <% end %>
            </tbody>
            </table>

            <br>

    
<% end %>
