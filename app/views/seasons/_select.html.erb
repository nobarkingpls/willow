
<% if @searched_seasons.present? %>

            <table>
            <thead>
                <tr>
                <th>ID</th>
                <th>Show</th>
                <th>Season</th>
                <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @searched_seasons.each do |season| %>
                <tr>
                        <td><%= season.id %></td>
                        <td><%= season.show.title %></td>
                        <td><%= season.number %></td>

                        <td><%= link_to "Show", season, data: { turbo: false } %></td>
                        <td><%= link_to "Edit", edit_season_path(season), data: { turbo: false } %></td>
                        <td>
                            <%= form_with model: season, method: :delete, data: { turbo: false } do %>
                                <%= submit_tag "Destroy" %>
                            <% end %>
                        </td>
                </tr>
                <% end %>
            </tbody>
            </table>

            <br>

    
<% end %>
