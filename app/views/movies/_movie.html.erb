<div id="<%= dom_id movie %>">
  <p>
    <strong>Title:</strong>
    <%= movie.title %>
  </p>

  <p>
    <strong>Genre(s):</strong>
    <% movie.genres.each do |genre| %>
      <%= render genre %>
    <% end %>
  </p>

  <p>
    <strong>Actor(s):</strong>
    <% movie.actors.each do |actor| %>
      <%= render actor %>
    <% end %>
  </p>

  <p>
    <strong>Right(s):</strong>
    <% movie.rights.each do |right| %>
      <p>
        <strong>Country:</strong>
        <%= right.country_code %>
      </p>

      <p>
        <strong>Start:</strong>
        <%= right.start %>
      </p>

      <p>
        <strong>End:</strong>
        <%= right.end %>
      </p>
    <% end %> 
  </p>

</div>
